{
    "name": "hotaruma/pipeline",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Max Denusenko",
            "email": "maxdenusenko@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hotaruma\\Pipeline\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": [
            "phpunit tests"
        ],
        "code_style": [
            "phpcs"
        ],
        "code_style_fix": [
            "phpcbf"
        ],
        "phpstan": [
            "phpstan analyse"
        ]
    }
}
